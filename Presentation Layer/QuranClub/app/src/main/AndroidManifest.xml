<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.jordan.quran_club">
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="net.jordan.quran_club.BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_quran_club_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_quran_club_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.Light.NoActionBar"
        android:usesCleartextTraffic="true"
       >

        <activity
            android:name="net.jordan.quran_club.ui.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.jordan.quran_club.ui.Admin.AdminActivity"
            android:exported="true" >
       </activity>
        <activity
            android:name="net.jordan.quran_club.ui.teacher.TeacherActivity"
            android:exported="false" />
        <activity
            android:name="net.jordan.quran_club.ui.student.StudentActivity"
            android:exported="false" />
        <activity
            android:name="net.jordan.quran_club.ui.login.LoginActivity"
            android:exported="true">



        </activity>
    </application>

</manifest>