<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:id="@+id/linear_layout_list_adapter"
    android:layout_height="match_parent">
    <LinearLayout
        android:layoutDirection="rtl"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/student_name"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:text="+"
            android:textAlignment="center"
            android:id="@+id/increase_linear_layout"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:text="-"
            android:textAlignment="center"
            android:id="@+id/decrease_linear_layout"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:padding="4dp"
            android:id="@+id/spinner_to_verses"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:padding="4dp"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:id="@+id/spinner_from_verses"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner

            android:textAlignment="textStart"
            android:id="@+id/spinner_surah_name"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner

            android:padding="4dp"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:id="@+id/spinner_quran_part_number"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_text_multi_line_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />
</LinearLayout>