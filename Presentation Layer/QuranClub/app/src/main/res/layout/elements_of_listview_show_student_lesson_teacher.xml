<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:id="@+id/linear_layout_list_adapter"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:text="+"
            android:textAlignment="center"
            android:id="@+id/increase_linear_layout"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:text="-"
            android:textAlignment="center"
            android:id="@+id/decrease_linear_layout"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="wrap_content"></TextView>

        <TextView

            android:textSize="@dimen/text_size_elements_listview_textview"
            android:id="@+id/student_name"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            ></TextView>
        <TextView
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:text=" اسم الطالب :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:id="@+id/textView_hint_to_verses"
            android:layout_width="match_parent"
            android:text="الى"
            android:textAlignment="center"
            android:layout_weight="6"
            android:pointerIcon="no_drop"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="من"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:textAlignment="center"
            android:id="@+id/textView_hint_from_verses"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </TextView>
        <TextView

            android:text="السورة"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:textAlignment="center"
            android:id="@+id/textView_hint_surah_name"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="الجزء"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:textAlignment="center"
            android:id="@+id/textView_hint_quran_part_number"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:padding="@dimen/spinner_padding"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:id="@+id/spinner_to_verses"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:pointerIcon="no_drop"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:padding="@dimen/spinner_padding"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:id="@+id/spinner_from_verses"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:textSize="@dimen/text_size_elements_listview_textview"
             android:id="@+id/spinner_surah_name"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:padding="@dimen/spinner_padding"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:id="@+id/spinner_quran_part_number"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:padding="@dimen/spinner_padding"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:id="@+id/spinner_to_verses_2"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:pointerIcon="no_drop"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:padding="@dimen/spinner_padding"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:id="@+id/spinner_from_verses_2"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:textSize="@dimen/text_size_elements_listview_textview"
             android:id="@+id/spinner_surah_name_2"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:padding="@dimen/spinner_padding"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:id="@+id/spinner_quran_part_number_2"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:padding="@dimen/spinner_padding"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:id="@+id/spinner_to_verses_3"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:pointerIcon="no_drop"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:padding="@dimen/spinner_padding"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:id="@+id/spinner_from_verses_3"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:id="@+id/spinner_surah_name_3"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:padding="@dimen/spinner_padding"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:id="@+id/spinner_quran_part_number_3"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:padding="@dimen/spinner_padding"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:id="@+id/spinner_to_verses_4"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:pointerIcon="no_drop"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:padding="@dimen/spinner_padding"
            android:id="@+id/spinner_from_verses_4"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:id="@+id/spinner_surah_name_4"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:padding="@dimen/spinner_padding"
            android:id="@+id/spinner_quran_part_number_4"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Spinner
            android:padding="@dimen/spinner_padding"
            android:id="@+id/spinner_to_verses_5"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:pointerIcon="no_drop"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:padding="@dimen/spinner_padding"
            android:id="@+id/spinner_from_verses_5"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:id="@+id/spinner_surah_name_5"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:id="@+id/spinner_quran_part_number_5"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:padding="@dimen/spinner_padding"

            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:padding="@dimen/spinner_padding"
            android:id="@+id/spinner_to_verses_6"
            android:layout_width="match_parent"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:layout_weight="6"
            android:pointerIcon="no_drop"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:padding="@dimen/spinner_padding"
            android:id="@+id/spinner_from_verses_6"
            android:layout_width="match_parent"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:layout_weight="6"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:id="@+id/spinner_surah_name_6"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:padding="@dimen/spinner_padding"
            android:id="@+id/spinner_quran_part_number_6"
            android:textAlignment="@integer/element_listview_textview_text_alignment"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:textSize="@dimen/text_size_elements_listview_textview"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ملاحظات"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_elements_listview_textview"></TextView>
    <EditText
        android:id="@+id/edit_text_multi_line_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/black"
        android:gravity="start|top"
        android:inputType="textMultiLine" />
</LinearLayout>